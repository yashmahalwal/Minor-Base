{
    "resource": {
        "id": {
            "type": "random.uuid"
        },
        "name": {
            "type": "name.firstName",
            "optional": true
        },
        "addresses": {
            "type": "address.zipCode",
            "plural": true,
            "nullable": true
        },
        "age": {
            "type": {
                "field": "random.number",
                "args": [{ "min": 0, "max": 100, "precision": 1 }]
            }
        },
        "branches": {
            "title": { "type": "random.word" }
        },
        "classes": {
            "nameNumber": {
                "type": [
                    "random.number",
                    { "field": "lorem.lines", "args": [1] }
                ]
            },
            "sampleField": {
                "optional": true,
                "nullable": true,
                "nestedField": { "sampleNested": { "type": "random.number" } }
            }
        }
    },
    "endpoints": [
        {
            "endpoint": "/Student",
            "urls": [
                {
                    "url": "/Student/{resource.id}",
                    "methods": [
                        {
                            "method": "GET",
                            "cases": [
                                {
                                    "key": "POSITIVE",
                                    "request": { "body": null },
                                    "response": {
                                        "status": 200,
                                        "body": "{resource}"
                                    }
                                },
                                {
                                    "key": "NEGATIVE",
                                    "request": { "body": null },
                                    "response": {
                                        "status": 404,
                                        "body": null
                                    }
                                },
                                {
                                    "key": "DESTRUCTIVE",
                                    "request": { "body": null },
                                    "response": {
                                        "status": 400,
                                        "body": null
                                    }
                                }
                            ]
                        },
                        {
                            "method": "DELETE",
                            "cases": [
                                {
                                    "key": "POSITIVE",
                                    "request": { "body": null },
                                    "response": {
                                        "status": 200,
                                        "body": "{resource}"
                                    }
                                },
                                {
                                    "key": "NEGATIVE",
                                    "request": { "body": null },
                                    "response": {
                                        "status": 404,
                                        "body": null
                                    }
                                },
                                {
                                    "key": "DESTRUCTIVE",
                                    "request": { "body": null },
                                    "response": {
                                        "status": 400,
                                        "body": null
                                    }
                                }
                            ]
                        },
                        {
                            "method": "POST",
                            "cases": [
                                {
                                    "key": "POSITIVE",
                                    "request": { "body": "{resource}" },
                                    "response": {
                                        "status": 201,
                                        "body": "{resource}"
                                    }
                                },

                                {
                                    "key": "DESTRUCTIVE",
                                    "request": { "body": "{resource}" },
                                    "response": {
                                        "status": 400,
                                        "body": null
                                    }
                                }
                            ]
                        },
                        {
                            "method": "PUT",
                            "cases": [
                                {
                                    "key": "POSITIVE",
                                    "request": { "body": "{resource}" },
                                    "response": {
                                        "status": [200, 201],
                                        "body": {
                                            "resource": "{resource}",
                                            "created": {
                                                "type": "random.boolean",
                                                "optional": true
                                            }
                                        }
                                    }
                                },

                                {
                                    "key": "DESTRUCTIVE",
                                    "request": { "body": "{resource}" },
                                    "response": {
                                        "status": 400,
                                        "body": null
                                    }
                                }
                            ]
                        },
                        {
                            "method": "PATCH",
                            "cases": [
                                {
                                    "key": "POSITIVE",
                                    "request": {
                                        "body": {
                                            "name": {
                                                "field": "{resource.name}",
                                                "optional": true
                                            },
                                            "addresses": {
                                                "field": "{resource.addresses}",
                                                "optional": true
                                            },
                                            "age": {
                                                "field": "{resource.age}",
                                                "optional": true
                                            },
                                            "branches": {
                                                "field": "{resource.branches}",
                                                "optional": true
                                            },
                                            "classes": {
                                                "field": "{resource.classes}",
                                                "optional": true
                                            }
                                        }
                                    },
                                    "response": {
                                        "status": 200,
                                        "body": "{resource}"
                                    }
                                },
                                {
                                    "key": "NEGATIVE",
                                    "request": { "body": null },
                                    "response": {
                                        "status": 404,
                                        "body": null
                                    }
                                },
                                {
                                    "key": "DESTRUCTIVE",
                                    "request": { "body": null },
                                    "response": {
                                        "status": 400,
                                        "body": null
                                    }
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
